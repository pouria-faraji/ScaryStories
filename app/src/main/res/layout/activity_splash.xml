<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:id="@+id/lin_lay">
    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <!--<ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/splash_img"
        android:src="@drawable/splash"
        android:layout_marginBottom="10dp"/>-->
    <com.blacksite.scarystories.customView.FaceYourFearTextView
        android:id="@+id/splash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textSize="@dimen/splash_title"
        android:textColor="@color/white"
        android:text="@string/app_name"/>
    <com.blacksite.scarystories.customView.MuseoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/heading_3"
        android:drawableStart="@drawable/baseline_headset_white_24"
        android:text="@string/headset_experience"/>

</RelativeLayout>
